<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/adminVertical.css">

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: radial-gradient(circle, #e0f7fa, hsl(195, 18%, 96%));
    }

    .navbar {
      width: 100%;
      z-index: 1000;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #1d1f23;
      color: white;
      padding: 20px;
      position: fixed;
      top: 56px;
      left: 0;
    }

    .main-content {
      margin-left: 250px;
      margin-top: 56px;
      padding: 20px;
    }

    .card {
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <!-- Top Navbar -->
  <%- include('adminNav') %>

  <!-- Sidebar -->
  <div class="sidebar">
    <%- include('adminVertical') %>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <%- include('square') %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
</body>
</html>
