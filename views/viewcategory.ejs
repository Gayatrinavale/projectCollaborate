<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/adminVertical.css">
 <style>
  .main-content {
    margin-left: 400px; /* Sidebar width */
    padding: 30px;
    margin-top:60px;
  }

  .form-control {
    max-width: 500px;
    margin-bottom: 20px;
  }

  .table {
    width: 800px;
    height: 300px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    font-size: 15px;
  }
  .table th,
.table td {
  padding: 6px 10px !important;  
  vertical-align: middle;
}

</style>


</head>
<body>
  <%- include('adminVertical.ejs') %>

  <div class="main-content">
    <form method="get" action="/search">
  <input type="text" name="sd" class="form-control" placeholder="Search..." onkeydown="ajaxImpl(this.value)">
</form>


    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>Category Name</th>
          <th>Delete</th>
          <th>Update</th>
        </tr>
      </thead>
      <tbody id="tblBody">
        <% if (data.length === 0) { %>
          <tr>
            <td colspan="4"><h3 class="text-center">There is no data present in the table</h3></td>
          </tr>
        <% } else {
          for (let i = 0; i < data.length; i++) {
            let item = data[i];
        %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= item.name %></td>
            <td><a href="/delcatbyid?id=<%= item.id %>">DELETE</a></td>
            <td><a href="/catupdate?cid=<%= item.id %>">UPDATE</a></td>
          </tr>
        <% } } %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>